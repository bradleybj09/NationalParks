<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="park"
                  type="com.example.nationalparks.model.room.Park"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <androidx.coordinatorlayout.widget.CoordinatorLayout
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="58dp">

            <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed"
                        app:contentScrim="@color/colorPrimary"
                        app:statusBarScrim="@color/colorPrimary"
                        app:titleEnabled="false"
                        android:elevation="2dp">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:src="@drawable/acadia"
                            android:adjustViewBounds="true"
                            app:layout_collapseMode="parallax"
                            android:scaleType="centerCrop"
                            android:foreground="@drawable/scrim"/>

                    <androidx.appcompat.widget.Toolbar
                            android:layout_width="match_parent"
                            android:layout_height="?actionBarSize"
                            app:layout_collapseMode="pin"
                            app:layout_scrollFlags="exitUntilCollapsed|enterAlways"
                            android:layout_gravity="bottom">

                        <TextView
                                android:id="@+id/park_detail_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{park.name}"
                                android:textColor="@android:color/secondary_text_light"
                                android:textSize="22sp"/>

                    </androidx.appcompat.widget.Toolbar>

                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                    <LinearLayout
                            android:id="@+id/park_detail_established"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                style="@style/DetailDataStyle"
                                android:text="Date Established:"/>

                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                style="@style/DetailDataStyle"
                                android:text="@{String.valueOf(park.establishDate)}"/>

                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/park_detail_area"
                            app:layout_constraintTop_toBottomOf="@id/park_detail_established"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                style="@style/DetailDataStyle"
                                android:text="Area:"/>

                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                style="@style/DetailDataStyle"
                                android:text="@{String.valueOf(park.area)}"/>

                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/park_detail_visitors"
                            app:layout_constraintTop_toBottomOf="@id/park_detail_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                style="@style/DetailDataStyle"
                                android:text="Annual Visitors:"/>

                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                style="@style/DetailDataStyle"
                                android:text="@{String.valueOf(park.visitors)}"/>

                    </LinearLayout>

                    <TextView
                            android:id="@+id/park_detail_description"
                            app:layout_constraintTop_toBottomOf="@id/park_detail_visitors"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/DetailDescriptionStyle"
                            android:text="@{park.description + '\n'}"
                            android:paddingBottom="?actionBarSize"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/view_campgrounds_button"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="View Campgrounds"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/secondary_text_light"
                android:onClick="@{}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>