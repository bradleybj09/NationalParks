<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <data>
            <variable
                    name="viewModel"
                    type="com.example.nationalparks.viewmodel.ParkListViewModel"/>
        </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.nationalparks.view.ui.ParkListFragment">

        <Toolbar
                android:id="@+id/list_fragment_toolbar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:title="@string/app_name"
                android:background="@color/colorPrimary"
                android:elevation="2dp"/>

        <ToggleButton
                app:layout_constraintTop_toTopOf="@id/list_fragment_toolbar"
                app:layout_constraintBottom_toBottomOf="@id/list_fragment_toolbar"
                app:layout_constraintRight_toRightOf="@id/list_fragment_toolbar"
                android:background="@drawable/button_border"
                android:layout_margin="8dp"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="@string/fahrenheit"
                android:textOn="@string/celsius"/>



        <androidx.recyclerview.widget.RecyclerView
                android:padding="4dp"
                android:id="@+id/park_list_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintTop_toBottomOf="@id/list_fragment_toolbar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>